            $("#username").css('border-color', 'red');
            $("#username").css('color', 'black');
            $("#username").css('background-color', 'yellow');
        });

        $("#username").mouseleave(function () {
            $("#username").css('border', '2px solid');
            $("#username").css('border-color', 'deepskyblue');
            $("#username").css('transition', 'border-color 0.2s ease-in-out');
            $("#username").css('color', '#98FF98');
            $("#username").css('margin-right', '10px');
            $("#username").css('background-color', 'lightslategray');
        });

        $("#tooltipText").click(function () {
            window.location.href = '/Home/Contact'
        });
    </script>

