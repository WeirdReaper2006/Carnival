<style type="text/css">
    #tooltip{
        position:relative;
        cursor:pointer;
        border-bottom:2px dotted;
        font-weight:bold;
        font-family:sans-serif;
    }
    #tooltipText{
        position:absolute;
        left:50%;
        top:0;
        transform: translateX(-50%);
        background-color: #000;
        color: #fff;
        white-space:nowrap;
        padding:10px 15px;
        border-radius:7px;
        visibility:hidden;
        opacity:0;
        transition:opacity 0.5s ease;
    }
    #tooltipText::before{
        content:"";
        position:absolute;
        left:50%;
        top:-65%;
        transform:translateX(-50%);
        border:15px solid;
        border-color:#0000 #0000 #000 #0000;
    }
    #tooltip:hover #tooltipText{
        top:130%;
        visibility:visible;
        opacity:1;
    }
</style>