<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" @*no purpose of using this href="/Home"*@>
                <img src="/favicon.ico" alt="Logo" />
                Carnival
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li><button onclick="location.href='@Url.Action("Index", "Home")'" class="nav-link btn btn-link btn-borderlayout">Home</button></li>
                    <li><button onclick="location.href='@Url.Action("About", "Home")'" class="nav-link btn btn-link btn-borderlayout">About</button></li>
                    <li><button onclick="location.href='@Url.Action("Contact", "Home")'" class="nav-link btn btn-link btn-borderlayout">Contact</button></li>
                    <li><button onclick="location.href='@Url.Action("Index", "Customers")'" class="nav-link btn btn-link btn-borderlayout">Customers</button></li>
                    <li><button onclick="location.href='@Url.Action("Index", "Stalls")'" class="nav-link btn btn-link btn-borderlayout">Stalls</button></li>
                    <li><button onclick="location.href='@Url.Action("Index", "Food_Products")'" class="nav-link btn btn-link btn-borderlayout">Food</button></li>
                    <li><button onclick="location.href='@Url.Action("Index", "FoodStallRelationships")'" class="nav-link btn btn-link btn-borderlayout">Food/Stalls</button></li>
                    <li><button onclick="location.href='@Url.Action("Index", "Orders")'" class="nav-link btn btn-link btn-borderlayout">Orders</button></li>
                </ul>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <li><a style="color: white;">Dear - @User.Identity.Name</a></li>
                <li>@Html.ActionLink("Logout", "Logout", "Logins")</li>
            }
            else
            {
                <li>@Html.ActionLink("Login", "Login", "Logins")</li>
            }
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Carnival Stall Program</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>

</body>
</html>

<style>
    .btn-borderlayout {
        border: 2px solid;
        border-color: deepskyblue;
        color: white;
        transition: border-color 0.2s ease-in-out;
        margin-right: 5px; /* Adjust the margin value to increase or decrease the spacing */
    }

        .btn-borderlayout:hover {
            border-color: red;
            color: black;
            background-color: yellow;
        }
</style>
